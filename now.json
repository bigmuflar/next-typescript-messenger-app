{
    "version": 2,
    "name": "next-typescript-messenger-app",
    "alias": "https://next-typescript-messenger-app.justinscottmed.now.sh",
    "env": {
      "NODE_ENV": "production"
    },
    "builds": [
      { 
        "src": "./pages/index.tsx",
        "use": "@now/static",
        "config": {
          "includeFiles": [
            "models/**",
            "pages/**"
          ]
        }
      },
      { 
        "src": "./index.ts", 
        "use": "@now/node",
        "config": {
          "includeFiles": [
            "models/message.ts"
          ]
        }
      }
    ]
  }